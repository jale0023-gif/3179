{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Most popular sports type in sports betting",
    "anchor": "start",
    "fontSize": 18,
    "fontWeight": "bold"
  },
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jale0023-gif/3179/refs/heads/main/gambling_sports_type.csv"
  },

  "transform": [
    {"calculate": "0", "as": "Start"}
  ],

  "layer": [
    {
      "mark": {"type": "rule", "color": "#d3d3d3", "strokeWidth": 3},
      "encoding": {
        "y": {
          "field": "Sport",
          "type": "nominal",
          "sort": "-x",
          "title": "Sport Type"
        },
        "x": {"field": "Start", "type": "quantitative"},
        "x2": {"field": "Participation_Percent"}
      }
    },
    {
      "mark": {"type": "circle", "size": 140, "color": "#1f77b4", "opacity": 0.9},
      "encoding": {
        "y": {"field": "Sport", "type": "nominal"},
        "x": {
          "field": "Participation_Percent",
          "type": "quantitative",
          "title": "Participation (%)"
        },
        "tooltip": [
          {"field": "Sport", "title": "Sport"},
          {
            "field": "Participation_Percent",
            "title": "Participation (%)",
            "format": ".1f"
          }
        ]
      }
    }
  ],

  "config": {
    "background": "#ffffff",
    "axis": {"labelFont": "Lato", "titleFont": "Lato"},
    "view": {"stroke": "transparent"}
  }
}

