{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 520,
  "background": "#eef6ff",
  "title": {
    "text": "Population by State, Australia (March 2025 ERP)",
    "subtitle": "Source: ABS Estimated Resident Population (March 2025)",
    "anchor": "start",
    "fontSize": 18
  },
  "projection": {
    "type": "equalEarth",
    "center": [134, -26],
    "scale": 900
  },
  "data": {
    "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
    "format": { "type": "geojson" }
  },
  "transform": [
    {
      "lookup": "properties.STATE_NAME",
      "from": {
        "data": { "url": "population_by_state.csv" },
        "key": "state",
        "fields": ["population"]
      }
    }
  ],
  "layer": [
    { "data": { "graticule": true }, "mark": { "type": "geoshape", "stroke": "#bcd1e6" } },
    {
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "population",
          "type": "quantitative",
          "title": "Population (ERP, March 2025)",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "properties.STATE_NAME", "title": "State/Territory" },
          { "field": "population", "title": "Population", "format": ",.0f" }
        ]
      }
    }
  ],
  "config": {
    "legend": { "orient": "right" },
    "view": { "stroke": null }
  }
}